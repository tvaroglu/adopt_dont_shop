<div style="padding-left: 20px;">
  <h1><%= @shelter.name %></h1>
  <p>Rank: <%= @shelter.rank %></p>
  <p>City: <%= @shelter.city %></p>

  <p class="pet-count">Pets at <%= @shelter.name %>: <%= @shelter.pet_count %></p>
  <p><%= link_to "All pets at #{@shelter.name}", "/admin/shelters/#{@shelter.id}/pets" %></p>

  <p><%= link_to "Delete #{@shelter.name}", "/admin/shelters/#{@shelter.id}", method: :delete %></p>
</div>
