<div style="padding-left: 20px;">
  <h1><%= @shelter.name %></h1>
  <p><strong>Address:</strong> <%= "#{@full_address.address}, #{@full_address.city}, #{@full_address.state} #{@full_address.zipcode}" %></p>

  <p class="pet-count"><strong>Total Pets at <%= @shelter.name %>:</strong> <%= @shelter.pet_count %></p>
  <div style="float:left; padding-right:5px;">
    <%= button_to "View All Pets At: #{@shelter.name}", "/admin/shelters/#{@shelter.id}/pets", method: :get %>
  </div>
  <%= button_to "Delete: #{@shelter.name}", "/admin/shelters/#{@shelter.id}", method: :delete %>
</div>
