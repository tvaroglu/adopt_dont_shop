<div style="padding-left: 20px;">
  <h1>All Shelters</h1>

  <%= button_to "Sort by: Number of Pets", "/admin/shelters", method: :get, params: { sort: 'pet_count' } %>
  <br>
  <%= form_with url: "/admin/shelters", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
  <br><br>
  <% @shelters.each do |shelter| %>
    <div id="shelter-<%= shelter.id %>">
      <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h3>
      <p>Created at: <%= shelter.created_at %></p>
      <div style="float:left; padding-right:5px;">
        <%= button_to "Update: #{shelter.name}", "/admin/shelters/#{shelter.id}/edit", method: :get %>
      </div>
      <%= button_to "Delete: #{shelter.name}", "/admin/shelters/#{shelter.id}", method: :delete %>
    </div>
    <br><br>
  <% end %>
  <br>
  <div id="pending-apps">
    <% if @shelters_pending_app_approvals.length > 0 %>
      <h2><em>Shelters With Pending Applications:</em></h2>
      <% @shelters_pending_app_approvals.each do |shelter| %>
        <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h3>
      <% end %>
    <% end %>
  </div>
</div>
