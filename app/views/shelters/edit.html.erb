<div style="padding-left: 20px;">
  <h1>Edit Shelter</h1>
  <%= form_with url: "/admin/shelters/#{@shelter.id}", method: :patch, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, value: "#{@shelter.name}" %>

    <%= f.label :city %>
    <%= f.text_field :city, value: "#{@shelter.city}" %>

    <%= f.label :foster_program %>
    <%= f.check_box :foster_program %>

    <%= f.label :rank %>
    <%= f.number_field :rank, in: 1..30, step: 1, value: "#{@shelter.rank}" %>
    <br><br>
    <%= f.submit %>
  <% end %>
</div>
