<div style="padding-left:20px;">
  <h1>New Pet</h1>
  <%= form_with url: "/admin/shelters/#{@shelter.id}/pets", method: :post, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :breed %>
    <%= f.text_field :breed %>

    <%= f.label :age %>
    <%= f.number_field :age, in: 1..30, step: 1 %>

    <%= f.label :adoptable %>
    <%= f.check_box :adoptable, value: true %>

    <%= f.submit %>
  <% end %>
</div>
